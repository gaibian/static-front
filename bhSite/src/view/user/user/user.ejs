<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>个人中心</title>
    <%= layout %>
</head>
<body>
<section class="page_container">
    <section class="user_content_box">
        <section class="page_title_container">
            <h1 class="title">个人中心</h1>
            <a class="right_bg_box">
                <i class="offer_bg"></i>
                去报价
            </a>
        </section>
        <div class="base_content_box">
            <div class="user_header_img">
                <img width="100%" height="100%" src="<%= require("../../../public-resource/imgs/header_img.jpg") %>">
            </div>
            <div class="name_box">
                <div class="pos">
                    <div class="name">周先生</div>
                    <div class="tel">13025461235</div>
                </div>
            </div>
        </div>
    </section>
    <div class="pos_list_content">
        <div class="integral_ul_box">
            <a class="integral_li_box integral_popup_btn">
                <i class="list_bg wddd"></i>
                <span class="text">我的订单</span>
                <em class="right_bg"></em>
            </a>
            <div class="order_nav_box">
                <ul class="order_ul">
                    <li class="order_li">
                        <i class="order_bg dxg"></i>
                        <p class="text">待修改</p>
                    </li>
                    <li class="order_li">
                        <i class="order_bg dzf"></i>
                        <p class="text">待支付</p>
                    </li>
                    <li class="order_li">
                        <i class="order_bg ysx"></i>
                        <p class="text">已失效</p>
                    </li>
                </ul>
            </div>
        </div>
        <div class="integral_ul_box">
            <a class="integral_li_box">
                <i class="list_bg jfzx"></i>
                <span class="text">积分中心</span>
                <em class="right_bg"></em>
            </a>
            <a class="integral_li_box">
                <i class="list_bg wdyhk"></i>
                <span class="text">我的银行卡</span>
                <em class="right_bg"></em>
            </a>
        </div>
    </div>

    <div class="sign_out_btn">退出登录</div>
</section>
</body>
</html>