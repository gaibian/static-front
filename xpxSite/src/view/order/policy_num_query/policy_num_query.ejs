<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>保单号查询</title>
    <%= layout %>
</head>
<body>
<section class="page_container">
    <section class="form_container">
        <form class="form" data-btn="query_btn">
            <div class="form_input">
                <label class="input_title">身份证号</label>
                <div class="input_box">
                    <input type="text" placeholder="填入被保险人身份证号" data-toggle="true" checkType="card" value="330226198909266554">
                </div>
            </div>
            <div class="form_input">
                <label class="input_title">手机号</label>
                <div class="input_box">
                    <input type="number" placeholder="填入投保人手机号" data-toggle="true" checkType="phone" value="15968939669">
                </div>
            </div>
            <div class="form_input verify_input">
                <label class="input_title">图形验证码</label>
                <div class="input_box">
                    <input type="text" placeholder="填入图片验证码">
                    <div class="verify_img">
                        <img width="100%" height="100%" src="<%= require('../../../public-resource/imgs/verify_img.jpg') %>">
                    </div>
                </div>
            </div>
            <div class="form_input verify_input">
                <label class="input_title">短信验证码</label>
                <div class="input_box">
                    <input type="text" placeholder="填入短信验证码">
                    <div class="send_dx_btn active">
                        发送短信
                    </div>
                </div>
            </div>
        </form>
    </section>
    <section class="btm_btn_box">
        <button class="query_btn">查询</button>
    </section>
</section>
</body>
<script>
  $(function(){
    mp.verify([{
      el:'.form',
      success:function(){
        console.log('前端验证通过')
      }
    }])
  })
</script>
</html>