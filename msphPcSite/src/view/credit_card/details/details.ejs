    </div>
    <div class="content_box">
        <div class="carousel_box js_carousel">
            <div class="img_box">
                <img width="100%" height="100%" src="<%= require('../../../public-resource/imgs/card_product_img.jpg') %>">
            </div>
            <div class="carousel_list carousel" data-num="3">
                <div class="pos_box">
                    <div class="hidden_box">
                        <ul class="carousel_ul">
                            <li>
                                <img width="100%" height="100%" data-img="11" src="<%= require('../../../public-resource/imgs/card_small_img.jpg') %>">
                            </li>
                            <li>
                                <img width="100%" height="100%" data-img="22" src="<%= require('../../../public-resource/imgs/card_small_img.jpg') %>">
                            </li>
                            <li>
                                <img width="100%" height="100%" data-img="33" src="<%= require('../../../public-resource/imgs/card_small_img.jpg') %>">
                            </li>
                            <li>
                                <img width="100%" height="100%" data-img="44" src="<%= require('../../../public-resource/imgs/card_small_img.jpg') %>">
