<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>分期详情</title>
    <%= layout() %>
</head>
<body>
<main class="page">
    <a class="return_page_btn"></a>
    <section class="page_header_container">分期详情</section>
    <section class="card_base_container">
        <div class="pos">
            <h3 class="card_title">金池SPA养生会所充值卡<i class="right_bg"></i></h3>
            <div class="all_money_box">
                <p class="text">分期本金(元)</p>
                <p class="all_money">3,000.00</p>
            </div>
            <ul class="btm_content_box">
                <li class="btm_li">
                    <p class="text">分期期数</p>
                    <p class="money">3</p>
                </li>
                <li class="btm_li line"></li>
                <li class="btm_li">
                    <p class="text">分期服务费(元)</p>
                    <p class="money">90.00</p>
                </li>
                <li class="btm_li line"></li>
                <li class="btm_li">
                    <p class="text">合计应还(元)</p>
                    <p class="money">3,090.00</p>
                </li>
            </ul>
        </div>
    </section>
    <section class="by_stages_list_container">
        <div class="by_stages_title">
            <span class="label">每期还款(元)</span>
            <span class="label">最后还款日</span>
        </div>
        <ul class="by_stages_ul">
            <li class="by_stages_li">
                <i class="num">1</i>
                <span class="val">1,030.00(首付)</span>
                <span class="time">2018-03-23</span>
            </li>
            <li class="by_stages_li active">
                <i class="num">2</i>
                <span class="val">1,030.00</span>
                <span class="time">2018-03-24</span>
            </li>
            <li class="by_stages_li">
                <i class="num">3</i>
                <span class="val">1,030.00</span>
                <span class="time">2018-03-25</span>
            </li>
        </ul>
    </section>
</main>
</body>
</html>